                        <child type="top">
                          <object class="AdwHeaderBar">
                            <property name="show-title">True</property>
                            <property name="centering-policy">strict</property>
                            <child type="start">
                              <object class="GtkButton">
                                <property name="icon-name">egghead-go-next-symbolic-rtl</property>
