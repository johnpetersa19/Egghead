                                                                <property name="halign">start</property>
                                                                <property name="use-markup">true</property>
                                                                <binding name="label">
                                                                  <lookup name="question" type="Quiz">
                                                                    <lookup name="quiz">EggheadWindow</lookup>
                                                                  </lookup>
                                                                </binding>
                                                              </object>
                                                            </child>
                                                          </object>
                                                        </child>
                                                      </object>
                                                    </child>
