<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>io.github.josephmawa.Egghead</id>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>

  <name>Egghead</name>
  <summary>Learn while having fun</summary>
  <description>
    <p>A simple trivia app to enjoy in your free time</p>
    <p>Below are the main features of Egghead:</p>
    <ul>
      <li>Download quiz</li>
      <li>Save downloaded quiz</li>
      <li>Delete saved quiz</li>
      <li>Switch to dark, light, or system mode</li>
    </ul>
  </description>

  <developer id="tld.vendor">
    <name>Joseph Mawa</name>
  </developer>

